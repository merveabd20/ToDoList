<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f4ed"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nBaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#184d47"
        android:layout_margin="20dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="59dp" />


    <RadioGroup
        android:id="@+id/radioDurum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RadioButton
            android:id="@+id/durum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#184d47"
            android:text="Yapılacak İş" />

        <RadioButton
            android:id="@+id/durum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#184d47"
            android:text="Devam Eden İş" />

        <RadioButton
            android:id="@+id/durum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#184d47"
            android:text="Biten İş" />
    </RadioGroup>

    <EditText

        android:id="@+id/nicerikText"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="8dp"
        android:background="#d6efc7"
        android:cursorVisible="true"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:textColor="#184d47"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="104dp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/nbtnGuncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:text="KAYDET"
            android:textStyle="bold"
            android:textColor="#ffff"
            app:backgroundTint="#96BB7C" />

        <Button
            android:id="@+id/nbtnSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Sil"
            android:textStyle="bold"
            android:textColor="#ffff"
            app:backgroundTint="#96BB7C" />

    </LinearLayout>

</LinearLayout>