<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f5f1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGit11"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:text="Not"
            android:textColor="#e93b81"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFE5E2" />


        <Button
            android:id="@+id/btnGit33"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:text="KANBAN"
            android:textColor="#e93b81"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFE5E2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="408dp"
        android:layout_height="121dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/aramaTXT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:textColor="#e93b81"
            android:layout_margin="10dp"
            android:hint="Başlığa göre ara"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/arabutton2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="240dp"
            android:textColor="#e93b81"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="#FFE5E2"
            android:text="Ara" />

    </LinearLayout>

    <Button
        android:id="@+id/kanbanEkle"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="240dp"
        android:textColor="#e93b81"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="#FFE5E2"
        android:text="Görev Oluştur" />

    <ListView
        android:id="@+id/listemiz9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#FFE5E2"></ListView>
</LinearLayout>